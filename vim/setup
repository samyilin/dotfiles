#!/bin/sh
setup_vim() {
  ln  -sf "$PWD/.vimrc" "$HOME/.vimrc"
  test -d "$HOME"/.cache || mkdir "$HOME"/.cache
}
main() {
  if [ ! -f "$HOME"/.vimrc ]; then
    setup_vim
  elif [ -f "$HOME"/.vimrc ] && [ ! -L "$HOME"/.vimrc ]; then
    mv  "$HOME"/.vimrc "$HOME"/.vimrc.bak
    echo "Your .vimrc have been backed up in .vimrc.bak"
    setup_vim
  fi
  exit 0
}

main "$@"
