#!/bin/bash

sudo apt update && sudo apt upgrade
sudo apt install do-release-upgrade

echo "If you wish to upgrade to the latest LTS release, first confirm your Ubuntu version"
echo "You are running:"
lsb_release -a
echo "To update to the latest Ubuntu LTS release, type "
echo "sudo do-release-upgrade -d"
echo "Follow instructions from this point on and restart after each upgrade to upgrade to the latest LTS"

sudo apt install vim tmux git
